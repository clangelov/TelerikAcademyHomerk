@model IEnumerable<Task03.MVCApplication.Employee>

@{
    ViewBag.Title = "TopPaid";
}

<div class="jumbotron">
    <h2 class="text-center">Top 10 Employees By Salary</h2>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="bs-component">
                <table class="table table-striped table-hover ">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Annual Salay</th>
                            <th class="text-center">Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">@(item.FirstName + " " + item.LastName)</td>
                                <td class="text-center">@string.Format("$ {0:F2}", item.Salary)</td>
                                <td class="text-center">@Html.ActionLink("Details", "Details", new {id = item.EmployeeID }, null)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

